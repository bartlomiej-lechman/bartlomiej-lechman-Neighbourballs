<AchievementScreen>:
    grid:grid
    FloatLayout:

        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'images/wallpaper_tasks.png'
                pos: self.pos
                size: self.size

        ImageButton:
            source: 'images/back_arrow.png'
            pos_hint: {"x":0, "y":0.85}
            size_hint: .1, .1
            on_release:
                app.change_screen("study_screen")

        GridLayout:
            name: 'grid'
            id: grid
            cols:5
            rows:3
            pos_hint: {"x":0, "y":0.25}
            size_hint_y: .55
            spacing:20